@model promact.Models.Postapp

@{
    ViewData["Title"] = "Postmsg";
}



<div class="col-lg-8 col-md-10 col-sm-12 col-xs-12 offset-lg-2 offset-md-1 float-md-center">
    <div class="page-header" style="padding-bottom:30px">
        <h1>Message Board Application</h1>
    </div>
</div>

<div class="col-lg-8 col-md-10 col-sm-12 col-xs-12 offset-lg-2 offset-md-1 float-md-center">

    <div class="jumbotron jumbotron-fluid" style="background:#fff; width:80%; height:40%;padding-top:10px; padding-right:10px; padding-left:10px; border-radius:10px; box-shadow: 0px 0px 10px 0px #000  ">
        <form asp-controller="Postapp" asp-action="Postmsg">
            <div class="form-group">
                <label asp-for="username">Username</label>
                <input asp-for="username" class="form-control" />
                <span asp-validation-for="username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="message">Enter Message to Post</label>
                <textarea asp-for="message" class="form-control" id="msg" rows="2"></textarea>
            </div>
            <div>
                <input type="submit" class="btn btn-primary" value="Post" />
            </div>
            <div>
                <a class="btn btn-primary" asp-controller="Show" asp-action="Index" style="padding-top:10px">Go to Message-board</a>
            </div>

        </form>
    </div>
</div>

